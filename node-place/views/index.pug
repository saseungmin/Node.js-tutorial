extends layout

block content
    h1 즐겨찾기
    #map
    script.
        var positions = [];
    for result in results
        script.
            positions.push({
                lat: #{result.location[1]},
                lng: #{result.location[0]},
                name: '#{result.name}',
                id: '#{result.placeId}',
            });
    script.
        function initMap(){
            var center = positions[0] || {lat: 37.540705, lng: 126.956764};
            var map = new google.maps.Map(document.getElementById('map'),{
                zoom:15,
                center:center
            });
            positions.forEach(function (pos) {
                var marker = new google.maps.Marker({
                    position: { lat: pos.lat, lng: pos.lng },
                    map: map,
                    title: pos.name,
                });
            });
        }
    script(
        async
        defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBeVTi4OukZ9r9KOTM_ZEPR1hLMaE3Aht8&callback=initMap")
    
        
    
